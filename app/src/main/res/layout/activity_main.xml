<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafcff"
    android:textColor="#002838"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/lang_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_out"/>

    <EditText
        android:id="@+id/text_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage"
        app:layout_constraintTop_toTopOf="@id/lang_out"
        app:layout_constraintBottom_toBottomOf="@id/lang_in"/>

    <Spinner
        android:id="@+id/lang_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_out"
        app:layout_constraintBottom_toBottomOf="@id/text_in"/>

    <EditText
        android:id="@+id/text_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/lang_in"
        app:layout_constraintBottom_toBottomOf="@id/button_go"/>

    <Button
        android:id="@+id/button_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Перевести"
        app:layout_constraintTop_toTopOf="@id/text_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="15dp"
        android:shadowDx="@android:integer/config_shortAnimTime"
        android:shadowDy="@android:integer/config_shortAnimTime"
        android:background="#e0e8ff"/>

</androidx.constraintlayout.widget.ConstraintLayout>