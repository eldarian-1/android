<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#fafcff"
    android:textColor="#002838">

    <TextView
        android:id="@+id/lang_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="english"
        android:background="#dde5ff"
        android:textColor="#727a98"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World! Hello World! Hello World! Hello World!"
        android:textColor="#002838"
        app:layout_constraintTop_toBottomOf="@id/lang_out"
        android:paddingHorizontal="20dp"/>

    <TextView
        android:id="@+id/lang_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="russian"
        android:background="#dde5ff"
        android:textColor="#727a98"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_out"/>

    <TextView
        android:id="@+id/text_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Привет мир! Привет мир! Привет мир! Привет мир!"
        android:textColor="#002838"
        app:layout_constraintTop_toBottomOf="@id/lang_in"
        android:paddingHorizontal="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>