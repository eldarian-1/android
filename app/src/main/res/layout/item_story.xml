<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundTranslator"
    android:textColor="@color/colorTextTranslator">

    <TextView
        android:id="@+id/lang"
        android:text="en-ru"
        style="@style/lang_style"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_in"
        style="@style/text_style"
        android:text="Hello World! Hello World! Hello World! Hello World! Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang"/>

    <TextView
        android:id="@+id/text_out"
        style="@style/text_style"
        android:text="Привет мир! Привет мир! Привет мир! Привет мир! Привет мир!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_in"/>

</androidx.constraintlayout.widget.ConstraintLayout>